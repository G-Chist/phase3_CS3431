<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="960.0" prefWidth="1280.0" spacing="20.0" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.phase3_cs3431.YelpController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <BorderPane prefHeight="960.0" prefWidth="1280.0">
         <left>
            <ScrollPane prefHeight="920.0" prefWidth="218.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Label fx:id="location_label" styleClass="subtitle-text" text="Location">
                                 <VBox.margin>
                                    <Insets left="4.0" top="10.0" />
                                 </VBox.margin></Label>
                              <ComboBox fx:id="stateComboBox" prefHeight="26.0" prefWidth="222.0" promptText="Select a State">
                                 <padding>
                                    <Insets left="4.0" right="4.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="4.0" right="4.0" />
                                 </VBox.margin></ComboBox>
                              <Button fx:id="filterButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="213.0" text="Apply Location Filter">
                                 <padding>
                                    <Insets left="3.0" right="3.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="4.0" right="4.0" />
                                 </VBox.margin></Button>
                              <Label fx:id="categories_label" styleClass="subtitle-text" text="Categories">
                                 <VBox.margin>
                                    <Insets left="4.0" right="4.0" />
                                 </VBox.margin></Label>
                              <ListView fx:id="categoryList" prefHeight="200.0" prefWidth="200.0">
                                 <padding>
                                    <Insets left="4.0" right="4.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="4.0" right="4.0" />
                                 </VBox.margin></ListView>
                              <Button fx:id="searchButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="206.0" text="Search">
                                 <padding>
                                    <Insets left="4.0" right="4.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="4.0" right="4.0" />
                                 </VBox.margin></Button>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
         </left>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="search_results_label" prefHeight="18.0" prefWidth="108.0" styleClass="subtitle-text" text="Search Results">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <TableView fx:id="businessTable" prefHeight="442.0" prefWidth="1040.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="Name" />
                      <TableColumn prefWidth="75.0" text="Address" />
                        <TableColumn prefWidth="75.0" text="City" />
                    </columns>
                     <VBox.margin>
                        <Insets left="4.0" right="4.0" />
                     </VBox.margin>
                  </TableView>
                  <Button fx:id="yelp_button" mnemonicParsing="false" text="Yelp">
                     <VBox.margin>
                        <Insets left="4.0" right="4.0" />
                     </VBox.margin></Button>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</VBox>
